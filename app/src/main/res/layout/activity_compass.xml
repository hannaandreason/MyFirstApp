<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.hannaandreason.myfirstapp.Compass">

    <ImageView
        android:id="@+id/compass_ground"
        android:layout_width="371dp"
        android:layout_height="354dp"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:src="@drawable/compass"
        tools:layout_centralVertical="true"
        tools:layout_centralHorizontal="true"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/pointer"
        android:layout_width="371dp"
        android:layout_height="354dp"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:src="@drawable/compass_pic"
        tools:layout_centralVertical="true"
        tools:layout_centralHorizontal="true"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/text_degrees"
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:layout_marginBottom="36dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#5d478d"
        android:textSize="100sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>





