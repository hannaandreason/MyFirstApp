<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.hannaandreason.myfirstapp.Compass">

    <ImageView
        android:id="@+id/compass_ground"
        android:layout_width="371dp"
        android:layout_height="354dp"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:src="@drawable/compass"
        tools:layout_centralVertical="true"
        tools:layout_centralHorizontal="true" />

    <ImageView
        android:id="@+id/pointer"
        android:layout_width="371dp"
        android:layout_height="354dp"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:src="@drawable/compass_pic"
        tools:layout_centralVertical="true"
        tools:layout_centralHorizontal="true" />

    <TextView
        android:id="@+id/text_degrees"
        android:layout_width="133dp"
        android:layout_height="50dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

</android.support.constraint.ConstraintLayout>





