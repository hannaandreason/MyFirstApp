<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.hannaandreason.myfirstapp.MainActivity"
   >


    <Button
        android:id="@+id/button2"
        android:layout_width="214dp"
        android:layout_height="107dp"
        android:onClick="startAccelerator"
        android:text="@string/start_accelerator"
        tools:layout_editor_absoluteY="16dp"
        tools:text="Accelerator"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="98dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="214dp"
        android:layout_height="107dp"
        android:onClick="startCompass"
        android:text="@string/start_compass"
        tools:text="Compass"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="98dp" />

</android.support.constraint.ConstraintLayout>
